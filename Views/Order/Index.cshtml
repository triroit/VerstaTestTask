@model IEnumerable<Order>

<div class="card">
    <div class="card-header">
        <h1>Order List</h1>
    </div>
    <div class="card-body">
        <div class="row pb-3">
            <div class="col-6 offset-6 text-end">
                <a asp-controller="Order" asp-action="AddOrder" class="btn btn-secondary">
                    <i class="bi bi-plus-circle"></i> Add Order
                </a>
            </div>
        </div>
        @if (Model.Count() == 0)
        {
            <div>Nothing found</div>
        }
        else
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Num</th>
                        <th>Sender City</th>
                        <th>Sender Address</th>
                        <th>Recipient City</th>
                        <th>Recipient Address</th>
                        <th>Date Of Receipt</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr onclick="location.href='@Url.Action("Details", "Order", new { id = order.Id })'">
                            <td>@order.Id</td>
                            <td>@order.SenderCity</td>
                            <td>@order.SenderAddress</td>
                            <td>@order.RecipientCity</td>
                            <td>@order.RecipientAddress</td>
                            <td>@order.DateOfReceipt</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>