@model Order

<div class="card">
    <div class="card-header">
        Details
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Order ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Sender City</dt>
            <dd class="col-sm-10">@Model.SenderCity</dd>

            <dt class="col-sm-2">Sender Address</dt>
            <dd class="col-sm-10">@Model.SenderAddress</dd>

            <dt class="col-sm-2">Recipient City</dt>
            <dd class="col-sm-10">@Model.RecipientCity</dd>

            <dt class="col-sm-2">Recipient Address</dt>
            <dd class="col-sm-10">@Model.RecipientAddress</dd>

            <dt class="col-sm-2">Weight</dt>
            <dd class="col-sm-10">@Model.Weight</dd>

            <dt class="col-sm-2">Date Of Receipt</dt>
            <dd class="col-sm-10">@Model.DateOfReceipt</dd>
        </dl>
        <a asp-controller="Order" asp-action="Index" class="btn btn-secondary">Back to List</a>

    </div>
</div>
